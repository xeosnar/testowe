{
  "name": "testowa-aplikacja",
  "version": "1.0.0",
  "description": "test",
  "tags": [
    "test"
  ],
  "keywords": ["keywords"],
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepublish": "npm run build && npm run build-types",
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc -p tsconfig-build.json",
    "build-types": "tsc -p tsconfig-types.json",
    "type-check": "tsc -p tsconfig.json --noEmit",
    "type-check-watch": "tsc --noEmit --watch",
    "test": "jest --silent",
    "test-watch": "jest --watchAll",
    "lint": "esw \"./src/**/*.{ts,tsx}\" --ext=\".tsx,.ts\" --ignore-path .gitignore --color",
    "lint-watch": "npm run lint -- --watch --cache --clear",
    "lint-names": "file-naming-enforcer type=camelCase folder=./src",
    "format": "prettier --ignore-path .gitignore --write \"**/*.{ts,tsx,js,json,scss,css}\"",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "lodash.debounce": "^4.0.8",
    "react": "^16.12.0"
  },
  "peerDependencies": {
    "react": "^16.12.0"
  },
  "devDependencies": {
    "@babel/core": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@testing-library/react": "^10.4.9",
    "@types/jest": "^25.2.3",
    "@types/lodash.debounce": "^4.0.6",
    "@types/react": "^16.9.49",
    "@typescript-eslint/parser": "^2.34.0",
    "babel-jest": "^26.3.0",
    "eslint": "^7.8.1",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-react": "^7.20.6",
    "eslint-watch": "^6.0.1",
    "file-naming-enforcer": "^1.1.8",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "lint-staged": "^10.3.0",
    "prettier": "^2.1.1",
    "react-dom": "^16.12.0",
    "semantic-release": "^17.4.4",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E  HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx,js,json}": [
      "prettier --write --"
    ]
  },
  "author": "",
  "license": "ISC",

  "homepage": "https://www.pl",
  "prettier": {
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "none",
    "semi": false
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "jest"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended",
      "plugin:react/recommended"
    ],
    "env": {
      "node": true,
      "jest": true,
      "es6": true
    },
    "rules": {
      "no-console": "off",
      "react/prop-types": "off",
      "jest/expect-expect": "off"
    },
    "parserOptions": {
      "sourceType": "module"
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript",
      "@babel/preset-react"
    ]
  },
  "engines": {
    "node": "18.17.0"
  }
}
